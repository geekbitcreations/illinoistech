extends layout.pug

block content
  h1.mt-5 Reviews
    a.btn.btn-primary(href='./reviews/new' style='margin-left: 25px') New
  table.table
    thead
      tr
        th(scope='col') Title
        th(scope='col') Author
    tbody
      each review in reviews
        tr
          td
            a(href='/reviews/' + review.id)= review.title
          td= review.author
