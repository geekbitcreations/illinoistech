extends layout.pug

block content
  h1.mt-5= review.title
    a.btn.btn-primary(href='/reviews/' + review.id + '/update' style='margin-left: 25px') Update
    form(action='/reviews/' + review.id + '/delete' method="POST")
      button.btn.btn-danger(type='submit') Delete
  h6.mt-5= "A review of '" + review.movie + "' by " + review.author
  p= review.content
