extends template.pug

block content
  h1.mt-5 ITMD 562 Bookstore
    a.btn.btn-primary(href='./books/new' style='margin-left: 25px') New
  table.table
    thead
      tr
        th(scope='col') ID
        th(scope='col') Title
        th(scope='col') Author
        th(scope='col') Number of Pages
      tbody
        each book in books
          tr
            td
              a(href='/books/' + book.id)= book.title
            td= book.author
            td= book.numPages
            