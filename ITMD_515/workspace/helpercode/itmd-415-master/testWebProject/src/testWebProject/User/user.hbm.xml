<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="User" table="user">
        <id column="user_id" 		name="uid" 		type="java.lang.Integer" />
        <property column="name" 	name="name" 	type="java.lang.String" />
        <property column="email" 	name="email" 	type="java.lang.String" />
        <property column="password" name="password" type="java.lang.String" />
        <property column="dob" 		name="dob" 		type="java.lang.Long" />
    </class>
</hibernate-mapping>